<meta http-equiv="refresh" content="5">
<div class="row">
  <div class="container">

    <hr>

    <div class="jumbotron">
      <h1>Условия</h1>

      <p>http://my.herokuapp.com</p>

      <p>Высылать задания на ../quiz</p>

      <p><%= link_to('Регистрация', users_path, class: 'btn btn-primary btn-lg')%></p>
    </div>

    <hr>

    <div class='col-md-8'>
      <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Рейтинг</div>

        <!-- Table -->
        <table class="table">
          <thead>
          <tr>
            <th>Rating</th>
            <th>Username</th>
            <th>Score</th>
          </tr>
          </thead>
          <tbody>
          <% @users.each_with_index do |u, index| %>
              <tr>
                <th><%= index + 1 %></th>
                <th><%= u.username %></th>
                <th><%= u.rating %></th>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class='col-md-4'>
      <div class='well'>
        Осталось столько-то мин
      </div>
    </div>

  </div>
</div>